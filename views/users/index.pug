extends ../layouts/common.pug
block content
    .d-flex
        h1 Users
            a.ml-3(href="/users/create", class="btn btn-primary")  New
    .d-flex.justify-content-end
        form(action="/users/search", method="get" class="d-flex")
            input(type="text", name="q" class="form-control")
            button(class="btn btn-primary ml-2") search
    
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    if user.avatar
                        img(src=user.avatar, width="32px")
                    else
                        img(src="http://placehold.it/32x32", width="32px")
                td= user.name
                td= user.phone
                td
                    a(href="/users/" + user.id, class="btn btn-light") View